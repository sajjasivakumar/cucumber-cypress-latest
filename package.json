{
  "name": "cypress-cucumber-html-report-boilerplate",
  "version": "1.0.0",
  "description": "Generating Cucumber HTML report in Cypress",
  "main": "index.js",
  "scripts": {
    "test": "cypress run --evn --e2e --spec **/001_LoginTests.feature --headed",
    "report": "node cypress.report.js",
    "tags": "cypress run --env TAGS='@smoke' --headed",
    "run:test": "npx cypress run --headed",
    "cy:parallel" : "cypress-parallel -t 2 -d cypress/e2e/features/ -s tags",
    "clean": "rm -rf cypress/downloads && rm -rf cypress/screenshots && rm -rf cypress/cucumber-json  && rm -rf cypress/reports && rm -rf cypress/fixtures && rm -rf .bin && rm -rf runner-results && rm -rf data && rm -rf multi-reporter-config.json",
    "pretty": "prettier --write \"./**/*.{js,json,yml}\""
  },
  "keywords": [
    "cypress",
    "cucumber",
    "report"
  ],
  "author": "siva.sajja",
  "devDependencies": {
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "cypress": "^12.17.3",
    "cypress-file-upload": "^5.0.6",
    "cypress-iframe": "^1.0.1",
    "cypress-wait-until": "^1.7.2",
    "cypress-xpath": "^2.0.1",
    "esbuild": "^0.17.19",
    "prettier": "2.8.8"
  },
  "cypress-cucumber-preprocessor": {
    "stepDefinitions": "cypress/e2e/step_definitions/**/*.js",
    "filterSpecs": true,
    "omitFiltered": true,
    "json": {
      "enabled": true,
      "formatter": ".bin/cucumber-json-formatter",
      "output": "cypress/reports/json/cucumber-report.json"
    },
    "messages": {
      "enabled": true,
      "output": "cypress/reports/messages/cucumber-messages.ndjson"
    }
  },
  "dependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^18.0.1",
    "cypress-parallel": "^0.13.0",
    "dayjs": "^1.11.9",
    "multiple-cucumber-html-reporter": "^3.4.0"
  }
}
